<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Demo Mode"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="The options here are experimental! They may not work correctly, so please be careful. After toggling Demo Mode, wait a bit; it takes a while to kick in."
                android:textAlignment="center" />

            <Switch
                android:id="@+id/show_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:switchMinWidth="50dp"
                android:text="Show Demo Mode"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/select_time"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Time" />

            <Button
                android:id="@+id/select_battery_level_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Select Battery Level" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="WiFi Strength"
                    android:textColor="@android:color/secondary_text_light" />

                <Spinner
                    android:id="@+id/wifi_strength"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="Mobile Strength"
                    android:textColor="@android:color/secondary_text_light" />

                <Spinner
                    android:id="@+id/mobile_strength"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="Mobile Type"
                    android:textColor="@android:color/secondary_text_light" />

                <Spinner
                    android:id="@+id/mobile_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="Status Bar Style"
                    android:textColor="@android:color/secondary_text_light" />

                <Spinner
                    android:id="@+id/stat_bar_style"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Switch
                android:id="@+id/show_notifs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:switchMinWidth="50dp"
                android:text="Show Notifications"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/battery_plugged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:switchMinWidth="50dp"
                android:text="Battery Charging"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/show_airplane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:switchMinWidth="50dp"
                android:text="Show Airplane Mode"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>